<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/tvExamName"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:text="Exam Name"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivExamDate"
                android:layout_width="42dp"
                android:layout_height="36dp"
                android:layout_marginStart="22dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintEnd_toStartOf="@+id/tvExamDate"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvExamName"
                app:srcCompat="@mipmap/clock" />

            <TextView
                android:id="@+id/tvExamDate"
                android:layout_width="311dp"
                android:layout_height="34dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="27dp"
                android:text="Exam Date"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivExamDate"
                app:layout_constraintTop_toBottomOf="@+id/tvExamName" />

            <ImageView
                android:id="@+id/ivExamNote"
                android:layout_width="41dp"
                android:layout_height="41dp"
                android:layout_marginStart="22dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintEnd_toStartOf="@+id/tvExamNote"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivExamDate"
                app:srcCompat="@mipmap/hat" />

            <TextView
                android:id="@+id/tvExamNote"
                android:layout_width="311dp"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="27dp"
                android:text="ExamNote"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivExamNote"
                app:layout_constraintTop_toBottomOf="@+id/tvExamDate" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>