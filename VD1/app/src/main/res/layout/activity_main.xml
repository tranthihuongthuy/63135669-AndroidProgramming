        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/nutSO3"
        android:text="NÚT SỐ 3"
        android:textSize="20dp"
        android:textColor="#E84511"
        android:background="@color/black"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        />

</LinearLayout>